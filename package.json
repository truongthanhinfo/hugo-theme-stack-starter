  "dependencies": {
    "glob": "^8.0.3"
  },
  "devDependencies": {
    "auto-changelog": "^1.16.1",
    "cssnano": "^6.0.2",
    "postcss-cli": "^11.0.0",
    "postcss-cssnext": "^2.10.0",
